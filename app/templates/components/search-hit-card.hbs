
{{#if cardOpen}}
  <div class="long-result">
    <span class="less" {{action "showMore" false}}>-</span>
    <a href="{{gateway}}/ipfs/{{hit.hash}}">{{{hit.title}}}</a>

    <div class="extra-result-info">
      <dl>
        <dt>hash</dt><dd>{{hit.hash}}</dd>
        <dt>title</dt><dd>{{{hit.title}}}</dd>
        {{#if hit.description}}
          <dt>description</dt><dd>{{{hit.description}}}</dd>
        {{/if}}
        <dt>type</dt><dd>{{hit.type}}</dd>
        {{#if hit.size}}
          <dt>size</dt><dd>{{hit.size}} bytes</dd>
        {{/if}}
        {{#if (eq kind "image")}}
          <img src="{{gateway}}/ipfs/{{hit.hash}}" />
        {{/if}}
        {{#if (eq kind "video")}}
          <video src="{{gateway}}/ipfs/{{hit.hash}}" controls preload="metadata" />
        {{/if}}
        {{#if (eq kind "audio")}}
          <audio controls="controls">
            <source src="{{gateway}}/ipfs/{{hit.hash}}" />
          </audio>
        {{/if}}
      </dl>
    </div>
  </div>
{{else}}
  <div class="short-result">
    <span class="more" {{action "showMore" true}}>+</span>
    <a href="{{gateway}}/ipfs/{{hit.hash}}">{{{hit.title}}}</a>
  </div>
{{/if}}
